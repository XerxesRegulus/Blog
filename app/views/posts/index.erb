<h1>Index</h1>
<%= link_to "New Post", new_post_path %>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td>
          <%= link_to "show", post_path(post) %>
          <%= link_to "edit", edit_post_path(post) %>
          <%= link_to "delete", post_path(post),
          method: :delete, data:{confirm: "You sure?"} %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
